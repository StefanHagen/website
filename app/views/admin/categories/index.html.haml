.row.padded-bottom.padded-top
  .col-md-1
  .col-md-8
    %ol.breadcrumb
      %li= link_to("Dashboard", [:admin, :dashboard])
      %li= "Categories"
  .col-md-2
    = link_to([:new, :admin, :category]) do
      %button.btn.btn-primary.pull-right{ :type => "button" }
        New Category
  .col-md-1

.row
  .col-md-1
  .col-md-10
    %table.table.table-hover.table-bordered.table-responsive.overview-table
      %tr
        %th= t("admin.columns.actions")
        %th= t("admin.columns.name")
        %th= t("admin.columns.key")
        %th
          %span.glyphicon.glyphicon-flag
        %th.text-right
          %span.glyphicon.glyphicon-time
          = t("admin.columns.created_at")
  
      - @categories.each do |category|
        %tr
          %td.actions-2
            = link_to([:edit, :admin, category]) do
              %button.btn.btn-warning{ :type => "button" }
                %span.glyphicon.glyphicon-edit
            = link_to([:admin, category], :confirm => "Are you sure you want to delete this category?", :method => :delete) do
              %button.btn.btn-danger{ :type => "button" }
                %span.glyphicon.glyphicon-trash
          %td= link_to(category.name, [:admin, category])
          %td= category.key
          %td.boolean
            = form_for [:admin, category], :remote => true do |f|
              = f.check_box :published, :class => "published"
          %td.text-right.timestamp= ts_descriptive(category.updated_at)
  .col-md-1

.row
  .col-md-1
  .col-md-10.text-center 
    = will_paginate @categories
  .col-md-1
