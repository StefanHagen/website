.row
  .col-md-1
  .col-md-10
    %h1.text-center Projects Index
  .col-md-1

.row
  .col-md-1
  .col-md-10
    = link_to("New project", [:new, :admin, :project])
  .col-md-1

.row
  .col-md-1
  .col-md-10
    %table.table.table-striped
      %tr
        %th= t("admin.columns.edit")
        %th= t("admin.columns.delete")
        %th= t("admin.columns.title")
        %th= t("admin.columns.published_at")
  
      - @projects.each do |project|
        %tr
          %td= link_to("Edit", [:edit, :admin, project])
          %td= link_to("Remove", [:admin, project], :confirm => "Are you sure you want to delete this post?", :method => :delete)
          %td= project.name
          %td= project.updated_at
  .col-md-1

.row
  .col-md-1
  .col-md-10 
    = will_paginate @settings
  .col-md-1
