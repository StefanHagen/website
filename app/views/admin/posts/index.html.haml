.row.padded-bottom.padded-top
  .col-md-1
  .col-md-9
    %ol.breadcrumb
      %li= link_to("Dashboard", [:admin, :dashboard])
      %li= "Blog"
  .col-md-1
    = link_to([:new, :admin, :post]) do
      %button.btn.btn-primary.pull-right{ :type => "button" }
        New Post
  .col-md-1

.row
  .col-md-1
  .col-md-10
    %table.table.table-hover.table-bordered.table-responsive.overview-table
      %tr
        %th= t("admin.columns.actions")
        %th= t("admin.columns.title")
        %th
          %span.glyphicon.glyphicon-flag
        %th.text-right
          %span.glyphicon.glyphicon-time
          = t("admin.columns.published_at")
  
      - @posts.each do |post|
        %tr
          %td.actions-2
            = link_to([:edit, :admin, post]) do
              %button.btn.btn-warning{ :type => "button" }
                %span.glyphicon.glyphicon-edit
            = link_to([:admin, post], :confirm => "Are you sure you want to delete this post?", :method => :delete) do
              %button.btn.btn-danger{ :type => "button" }
                %span.glyphicon.glyphicon-trash
          %td= link_to(post.title, [:admin, post])
          %td.boolean
            = form_for [:admin, post], :remote => true do |f|
              = f.check_box :published, :class => "published"
          %td.text-right.timestamp= post.updated_at
  .col-md-1

.row
  .col-md-1
  .col-md-10.text-center 
    = will_paginate @posts
  .col-md-1
